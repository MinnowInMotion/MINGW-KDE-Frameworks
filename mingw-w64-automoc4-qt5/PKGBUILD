# Contributor: Pierre Schmitz <pierre@archlinux.de>

_variant=-${KF5_VARIANT:-shared}
source "$(dirname ${BASH_SOURCE[0]})"/../mingw-w64-PKGBUILD-common/kde-frameworks5
_kde_f5_init_package "${_variant}" "automoc4"
pkgver=0.9.88
pkgrel=8
pkgdesc="Automatic moc for Qt4"
arch=('i686' 'x86_64')
url='http://www.kde.org/'
license=('custom')
#depends=('qt4')
makedepends=('pkgconfig' 'cmake')
source=("http://download.kde.org/stable/${_basename}/${pkgver}/${_basename}-${pkgver}.tar.bz2")
md5sums=('91bf517cb940109180ecd07bc90c69ec'
       )

prepare() {
    mkdir -p build-${CARCH}${_variant}

# Fix CMake warnings with newer policies
  #cd $pkgname-$pkgver
  #patch -p1 -i ../fix-cmake-warnings.patch
}

build() {
 local -a extra_config
  cd build-${CARCH}${_variant}
  if [ "${_variant}" = "-static" ]; then
    extra_config+=( -DBUILD_SHARED_LIBS=NO )
    QT5_PREFIX=${MINGW_PREFIX}/qt5-static
    export PATH=${QT5_PREFIX}/bin:"$PATH"
  else
    QT5_PREFIX=${MINGW_PREFIX}
  fi
  MSYS2_ARG_CONV_EXCL="-DCMAKE_INSTALL_PREFIX=;-DECM_MKSPECS_INSTALL_DIR=" \
    cmake ../${_basename}-${pkgver} \
      -DCMAKE_BUILD_TYPE=$(_kde_f5_CMAKE_BUILD_TYPE) \
      -DCMAKE_INSTALL_PREFIX=${QT5_PREFIX} \
      -DKDE_INSTALL_LIBDIR=lib \
      -DECM_MKSPECS_INSTALL_DIR=${QT5_PREFIX}/share/qt5/mkspecs \
      -DBUILD_TESTING=OFF \
      -DECM_DIR=${MINGW_PREFIX}/share/ECM \
      "${extra_config[@]}" \
      -G'MSYS Makefiles'
  make
}

package() {
  cd build
  make DESTDIR="${pkgdir}" install

  install -Dm644 "${srcdir}/license.txt" \
    "${pkgdir}/usr/share/licenses/${pkgname}/LICENSE"
}
